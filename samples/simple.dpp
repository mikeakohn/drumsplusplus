
set bpm=120;
set default_volume=127;
set drift=5;
set time_signature=4/4;

define bassdrum 36
define snare 38
define highhat 42
define open_highhat 46

pattern pattern_1
{
  bassdrum: 1 1.5 3;
  snare: 2 4:127;
  highhat: 1 2 3 4;
}

pattern pattern_2
{
  bassdrum: 1 3;
  snare: 2 4:%120;
  highhat: 1 2 3;
  open_highhat: 4;
}

section a
{
  play: pattern_1, pattern_1, pattern_2;
}

section b
{
  play: pattern_1, pattern_2;
}

song test_song
{
  play: pattern_1, a, b, a;
}


